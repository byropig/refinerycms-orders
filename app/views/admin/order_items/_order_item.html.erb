<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order_item) -%>">
  <span class='title'>
    <%= order_item.product_name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), order_item_path(order_item),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_order_item_path(order_item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_order_item_path(order_item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => order_item.product_name),
        :method => :delete %>
  </span>
</li>
