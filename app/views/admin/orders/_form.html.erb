<%= form_for [:admin, @order] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @order,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :order_number -%>
    <%= f.text_field :order_number, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :customer -%>
    <%= f.text_field :customer  -%>
  </div>
  
  <div class='field'>
    <%= f.label :order_status -%>
    <%= f.text_field :order_status  -%>
  </div>
  
  <div class='field'>
    <%= f.label :grand_total -%>
    <%= f.text_field :grand_total  -%>
  </div>
  
  <div class='field'>
    <%= f.label :address_line_1 -%>
    <%= f.text_field :address_line_1  -%>
  </div>
  
  <div class='field'>
    <%= f.label :address_line_2 -%>
    <%= f.text_field :address_line_2  -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>
  </div>
  
  <div class='field'>
    <%= f.label :postal_code -%>
    <%= f.text_field :postal_code  -%>
  </div>
  
  <div class='field'>
    <%= f.label :suburb -%>
    <%= f.text_field :suburb  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.orders.order'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @order.order_number)
              } %>
<% end -%>
