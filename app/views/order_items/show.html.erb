<% content_for :body_content_title do %>
  <%= @order_item.product_name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Product Name</h1>
    <p>
      <%=raw @order_item.product_name %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @order_item.price %>
    </p>
  </section>
  <section>
    <h1>Order</h1>
    <p>
      <%=raw @order_item.order_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="order_items">
      <% @order_items.each do |order_item| %>
        <li>
          <%= link_to order_item.product_name, order_item_path(order_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
